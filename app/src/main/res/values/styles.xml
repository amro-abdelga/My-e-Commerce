<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/sans_semi_bold</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="icon">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">14dp</item>
    </style>

</resources>