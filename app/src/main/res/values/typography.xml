<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Heading.Promotion" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">36sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/efont</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/efont</item>
    </style>

    <style name="Body.BottomBar" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/efont</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/efont</item>
    </style>


    <style name="Body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/efont</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/efont</item>
    </style>

    <style name="Body.Text" parent="Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body.Text.Bold" parent="Body.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body.Text.L" parent="Body">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body.Text.L.Bold" parent="Body.Text.L">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Hint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/efont</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/efont</item>
    </style>

    <style name="Heading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/efont</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/efont</item>
    </style>

    <style name="Heading.TopBar" parent="Heading">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Heading.Title" parent="Heading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>